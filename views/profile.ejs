<!doctype html>
<html>
<head>
    <title>Bucket List</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div class="col-sm-6">
          <h3>My Bucket List:</h3>
          <ol class="listItems">
          <% for(var i=0; i<listItems.length; i++) {%>
            <li class="list">
              <p><%= listItems[i]._id %></p>
              <p>Category: <span><%= listItems[i].category %></span></p>
              <p>Idea: <span><%= listItems[i].idea %></span></p>
              <p>Notes: <span><%= listItems[i].notes %></span></p>
              <span><i class="fas fa-trash-alt"></i></span>
              <% if (listItems[i].completed) { %>
               <span><i class="fas fa-check"></i></span>
             
               <% } else { %>
                <span><i class="far fa-square"></i></span>
               <% } %>
            </li>
          <% } %>
          </ol>

          <!-- <h2>Add a message</h2>
        <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <input type="text" value="<%= user.local.email %>" name="name">
            <input type="text" placeholder="message" name="msg">
            <button type="submit">Submit</button>
          </form> -->
          <a href="/create" class="addToList"><button>Add to list</button></a>
        </div>
        <% } %>

</div>

<script src="main.js"></script>

</body>
</html>